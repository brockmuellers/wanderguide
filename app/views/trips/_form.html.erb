<% if @trip.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @trip.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for [current_user, @trip], :html => { :class => 'form' } do |f| %>
  <div class="control-group">
    <%= f.label "Name" %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :maxlength=>"17" %>
    </div>
  </div>
	<div class="control-group">
    <%= f.label "Category" %>
    <div class="controls">
      <%= f.select(:category, ["Adventure", "Beach", "City", "Family", "Historical", "Luxury", "Outdoors", "Relaxing", "Road trip", "Romantic", "Other"])%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Description" %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area', :id => 'about_trip' %>
	  	<p id="counter" class="help-block"></p>
    </div>
  </div>
	<div class="control-group">
    <%= label_tag "Location" %>
		<div class="controls">
			<%= f.fields_for :locations do |builder| %>
		    <%= render 'location_fields', f: builder %>
			<% end %>
			<%= link_to_add_fields "Add Location", f, :locations %>
		</div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn' %>
    <%= link_to 'Cancel',
                root_path, :class => 'btn' %>
  </div>
<% end %>

<% content_for :additional_scripts do %>
  <script  type="text/javascript">
    $(document).ready(function() {
    	var characters = 220;
    	$("#counter").append("You have <strong>"+  characters+"</strong> characters remaining");
    	$("#about_trip").keyup(function(){
        if($(this).val().length > characters){
       		$(this).val($(this).val().substr(0, characters));
        }
    		var remaining = characters -  $(this).val().length;
   	 		$("#counter").html("You have <strong>"+  remaining+"</strong> characters remaining");
   	 	});
   	 	$('#about_trip').keyup();
   });
  </script>
<% end %>
