<div class="highlight-box center">
	<div class="page-header">
  	<h1 class="center-text">Log In</h1>
	</div>
	<%= form_tag nil, :class => 'form' do |f| %>
	  <div class="control-group">
	    <%= label_tag :email, 'Email', :class => 'control-label' %>
	    <div class="controls">
	      <%= text_field_tag :email, params[:email], :class => 'text_field' %>
	    </div>
	  </div>
	  <div class="control-group">
	    <%= label_tag :password, 'Password', :class => 'control-label' %>
	    <div class="controls">
	      <%= password_field_tag :password, '', :class => 'text_field' %>
	    </div>
	  </div>

	  <div class="form-actions">
	    <%= submit_tag 'Login', :class => 'btn-bold' %>
	  </div>
	<% end %>
	<hr class="long">
  <p class="center-text">
    <span>Don't have an account? </span><%= link_to 'Register now', new_user_path %> <span> for free!</span>
  </p>
</div>
